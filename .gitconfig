  email = juanleon.lahoz@avature.net

[core]

  editor = /usr/bin/emacsclient --alternate-editor /usr/bin/emacs
  excludesfile = ~/.gitignore.global

[receive]

  denyCurrentBranch = ignore

[color]

  ui = auto
  interactive = auto
  branch = auto
  status = auto
  diff = auto

[color.status]

  current = green bold
  local = green
  remote = red bold
  added = green bold
  changed = yellow bold
  untracked = red
  branch = yellow

[merge]

  tool = meld

[push]

  default = upstream

[diff]

  tool = meld

[alias]

  # Reviewing commits
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  graph = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''%C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)' --abbrev-commit
#  create-review = push gerrit HEAD:refs/for/develop
#  create-review-in-branch = "!f() { git push gerrit HEAD:refs/for/$1; }; f"
#  clone-from-gerrit = "!f() { git clone ssh://gerrit/$1.git $2; cd $2; cd $2; git checkout develop; git remote rename origin gerrit; }; f"

  # Pre commit
  fixme = diff-index --cached -u -Sfixme HEAD

  # Debug
  parents = rev-list -1 --merges --parents

  olog = log --oneline --relative-date
