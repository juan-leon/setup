[core]
  editor = /usr/bin/emacsclient --alternate-editor /usr/bin/emacs
  excludesfile = ~/.gitignore.global

[receive]
  denyCurrentBranch = ignore

[color]
  ui = auto
  interactive = auto
  branch = auto
  status = auto
  diff = auto

[color.status]
  current = green bold
  local = green
  remote = red bold
  added = green bold
  changed = yellow bold
  untracked = red
  branch = yellow

[rerere]
  autoupdate = true
  enabled = true

[push]
  default = upstream

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    line-numbers = true
    side-by-side = false

    syntax-theme = Dracula
    plus-style = syntax "#003800"

#    minus-style = syntax "#3f0001"
#    plus-style = "syntax #012800"
#    minus-style = "syntax #340001"
#    syntax-theme = Monokai Extended
#    navigate = true

[interactive]
    diffFilter = delta --color-only

[diff]
    renameLimit = 100000


